generator client {
    provider      = "prisma-client-js"
    binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id        Int    @id @unique @default(autoincrement())
    discordId BigInt

    passports Int[]

    virtualPassword   String
    physicalPasswords String[]

    @@map(name: "Users")
}

model Passport {
    id      Int @id @unique @default(autoincrement())
    version Int

    owner Int

    surname String
    name    String

    dateOfBirth DateTime
    dateOfIssue DateTime

    placeOfOrigin String

    hasVirtualAccess Boolean
    hasPhyiscalAccess Boolean

    @@map(name: "Passports")
}
